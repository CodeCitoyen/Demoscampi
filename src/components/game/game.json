    {
      "year": 8,
      "texts": [
        {
          "text@en": "VOID",
          "text@fr": "Un voilier est visible au loin, il va manifestement passer non loin de l'île, un choix se pose alors pour ceux qui veulent partir de l'île."
        }
      ],
      "choices" : [
        {
          "text@en": "VOID",
          "text@fr": "Attirer le bateau avec un feu, au risque de le faire fuir",
          "var_changes": {
